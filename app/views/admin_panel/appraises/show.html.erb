<div class="main-content">
  <div class="panel panel-default">
	  <div class="panel-heading panel-active">教师评价</div>
	  <div class="panel-body panel-default-bg">
	    <table class="table">
	      <tr>
	      	<th class="col-sm-1">学员</th>
	      	<td><%= @appraise.try(:user).try(:name) %> </td>
	      </tr>
	      <tr>
	      	<th>评价老师</th>
	      	<td><%= @appraise.try(:teacher).try(:name) %></td>
	      </tr>
	      <tr>
	      	<th>培训班</th>
	      	<td><%= link_to @appraise.try(:training_course).try(:name), detail_admin_panel_training_course_path(@appraise.training_course.id), title: @appraise.try(:training_course).try(:name), target: "_blank" %></td>
	      </tr>
	      <tr>
	      	<th>评价内容</th>
	      	<td><%= @appraise.remark %></td>
	      </tr>
	      <tr>
	      	<th>满意程度</th>
	      	<td><%= Appraise::Degree[@appraise.degree] %></td>
	      </tr>
	      <tr>
	      	<th>修改时间</th>
	      	<td><%= @appraise.created_at.strftime("%Y-%m-%d %H:%M") %></td>
	      </tr>
	    </table>
	  </div>
	</div>
</div>