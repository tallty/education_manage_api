<div id="adminModalForm" class="modal fade admin-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">添加授课教师</h4>
      </div>
      <div id="adminForm" class="modal-body">
        <%= simple_form_for(@teacher, url: is_edit_or_update? ? admin_panel_teacher_path(@teacher) : admin_panel_teachers_path(@teacher),remote: true, wrapper: :horizontal_form, html: {class: "form-horizontal"}) do |f| %>
          <%= f.input :name, required: true  %>
          <%= f.input :sex, required: true, collection: Teacher::Sex.invert, as: :radio_buttons, wrapper: :horizontal_radio_and_checkboxes, item_wrapper_class: "radio-inline" %>
          <%= f.input :id_card, required: true  %>
          <%= f.input :school_id, required: true, prompt: '请选择培训机构',input_html: { value: @teacher.try(:school).try(:id) } , as: :select, collection: School.all.pluck(:name, :id) %>
          <%= f.input :job_title  %>
          <%= f.input :position %>
          <%= f.input :address %>
          <%= f.input :postcode %>
          <%= f.input :phone, required: true  %>
          <%= f.input :mobile, required: true  %>
          <%= f.input :email, required: true  %>
          <%= f.input :qq %>
          <%= f.input :remark %>
          <p class="text-center"><%= f.button :submit, "确认提交", class: "btn btn-primary" %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>