<div class="container-fluid">
  <div class="wrapper">
    <div class="row">
      <div class="personal_center right_message_tab col-md-3">
        <%= render "user/personal_nav"%>
      </div>
      <div class="tab-content courses col-md-9 pull-right">
        <div class="panel panel-default">
          <div class="panel-heading"><%= render 'course_nav'%></div>
          <div class="panel-body">
            <div class="text-info" >[<%= @training_course.name %>] <span class="text-muted" style="font-size: 18px;">日志列表</span> </div>
            <table class="table table-bordered table-stripped table-hover table-condensed">
              <tr>
                <th class="text-center">日期</th>
                <th class="text-center">日志内容</th>
                <th class="text-center">创建时间</th>
              </tr>
              <% @journals.each do |journal|%>
                <tr class="text-center">
                  <td><%= journal.try(:add_date).strftime("%Y-%m-%d") %></td>
                  <td><%= raw journal.content %></td>
                  <td><%= journal.try(:created_at).strftime("%Y-%m-%d %H:%M") %></td>
                </tr>
              <% end %>
            </table>
            <div class="text-center">
              <%= paginate @journals%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>