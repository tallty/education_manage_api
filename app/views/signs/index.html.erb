<p id="notice"><%= notice %></p>

<h1>Listing Signs</h1>

<table>
  <thead>
    <tr>
      <th>Training course</th>
      <th>School</th>
      <th>User</th>
      <th>Sign time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @signs.each do |sign| %>
      <tr>
        <td><%= sign.training_course %></td>
        <td><%= sign.school %></td>
        <td><%= sign.user %></td>
        <td><%= sign.sign_time %></td>
        <td><%= link_to 'Show', sign %></td>
        <td><%= link_to 'Edit', edit_sign_path(sign) %></td>
        <td><%= link_to 'Destroy', sign, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

