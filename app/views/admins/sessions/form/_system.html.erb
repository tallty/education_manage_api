<!-- 管理部门 -->
<div class="panel-body js-panel-toggle">
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <% flash.each do |key, value| %>
    <% if value.present? %>
        <p class="text-danger"><%= value%></p>
    <% end %>
  <% end %>
  <%= hidden_field_tag :role, params[:role]%>
  <%= f.hidden_field :email, value: "shanghai"%>
  <div class="input-group input-group-lg mt-20">
    <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-user"></span></span>
    <%= text_field_tag :email, nil, value: "上海市高职高专教学研究会秘书处", class: "form-control", disabled: true %>
  </div>

  <div class="input-group input-group-lg mt-20">
    <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
    <%= f.password_field :password, label: false, placeholder: "请输入密码", "aria-describedby": "basic-addon1", class: "form-control" %>
  </div>
  <div class="input-group mt-20">
    <%= f.input :remember_me, as: :boolean, label: "记住密码" if devise_mapping.rememberable? %>
  </div>
  <div class="col-sm-12  mt-20">
    <%= f.button :submit, "登 录", data: {disable_with: '登录中...'}, class: "btn btn-lg btn-primary btn-block center-block", "aria-describedby": "sizing-addon1" %>
  </div>
<% end %>
</div>