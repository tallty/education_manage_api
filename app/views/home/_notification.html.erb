<ul>
  <% if @profession_notifications.present? %>
		<% notifications.each do |notification| %>
			<li>
			  <a href="<%= notification_path(notification) %>" class="col-sm-10 pull-left" title="<%= notification.title %>"><%= truncate notification.title, length: 28 %></a>
			  <span class="pull-right"><%= notification.created_at.strftime("%Y-%m-%d") %></span>
			</li>
		<% end %>
	<% else %>
	  <div class="alert alert-warning" role="alert">该栏目暂时还没有培训通知</div>
	<% end %>
</ul>