<div class="container-fluid">
  <div class="wrapper">
    <div class="row">
      <div class="personal_center right_message_tab col-md-3">
        <%= render "personal_nav"%>
      </div>
      <div class="tab-content courses col-md-9">
          <div class="right-nav-tab personal_center_content">
            <strong class="col-md-3 right_message_tab"><span>个人信息</span></strong><br/><br/>
            <div class="center_content" style="<%= @user.try(:errors).present? ? "display: none;" : "display: block;"%>">
              <%= render "user_info"%>
            </div>
            <div class="center_content" style="<%= @user.try(:errors).present? ? "display: block;" : "display: none;"%>">
              <%= render "user_edit"%>
            </div>
          </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(function(){
    $("#editInfoBtn").click(function(){
      $(".center_content").eq(0).hide();
      $(".center_content").eq(1).show();
      $('html,body').scrollTop(0);
    });
    $("#cancelInfoBtn").click(function(){
      $(".center_content").eq(1).hide();
      $(".center_content").eq(0).show();
      $('html,body').scrollTop(0);
    });
  });
</script>