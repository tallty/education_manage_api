<header>
	<div class="header_nav_bg">
		<%#= image_tag("home_nav_bg.png", class: 'main-header') %>
		<span class="title_text">上海市高职高专师资公共培训基地-培训考核平台</span>
	</div>
	<div class="navbar-custom" id="normal">
	  <span class="navbar-custom-span">
	  	<%= link_to "http://114.55.172.35", class: "no_active" do %>
	  		培训基地
	  	<% end %>
	  	<%= link_to home_index_path, class: "no_active active" do %>
        首页
	  	<% end %>
		  <%= link_to "项目申报", projects_path, class: "no_active"%>
		  <%= link_to "培训通知", notifications_path, class: "no_active"%>
		  <%= link_to "培训报名", training_courses_path, class: "no_active"%>
		  <%#= link_to "培训基地", training_bases_path, class: "no_active"%>
		  <%= link_to "个人中心", course_user_index_path, class: "no_active"%>
	  </span>
	  <span class="login-content">
	    <%= link_to new_admin_session_path do %>
	      <span class="glyphicon glyphicon-cog"></span>&nbsp;管理
		  <% end %>
		  <% if user_signed_in? %>
			  <%= link_to destroy_session_path(:user), method: :delete do %>
		      <span class="glyphicon glyphicon-log-out"></span>&nbsp;退出
			  <% end %>
			  <%= link_to my_user_index_path do %>
		      <span class="glyphicon glyphicon-user"></span> <%= current_user.name %>
			  <% end %>
		  <% else %>
			  <%= link_to new_registration_path(:user) do %>
		      <span class="glyphicon glyphicon-log-in"></span>&nbsp;注册
			  <% end %>
		  	<%= link_to new_session_path(:user) do %>
		      <span class="glyphicon glyphicon-user"></span>&nbsp;登录
			  <% end %>
		  <% end %>
	  </span>
	</div>
</header>
<script type="text/javascript">
	$(function(){
		$("header a").removeClass("active");
		$("header a:eq(<%= get_menu_index + 1 if get_menu_index.present? %>)").addClass("active");
	});
</script>
